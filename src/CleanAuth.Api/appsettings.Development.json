{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "Console": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    },
    "FormatterName": "json",
    "FormatterOptions": {
      "SingleLine": true,
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss ",
      "UseUtcTimestamp": true,
      "JsonWriterOptions": {
        "Indented": false
      }
    }
  },
  "ConnectionStrings": {
    "CleanAuthDb": "Host=localhost;Port=5432;Database=CleanAuth;Username=postgres;Password=strong_password;"
  },
  "BCryptPasswordHasherSettings": {
    "WorkFactor": 12
  },
  "JWtSettings": {
    "Secret": "a-very-super-secret-key-that-is-long-enough",
    "TokenExpirationInMinutes": 60,
    "Issuer": "CleanAuthApi",
    "Audience": "CleanAuthApi"
  }
}
